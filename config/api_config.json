{
  "apiVersion": "2.0.0",
  "projectName": "ScheduleFlow",
  "security": {
    "adminKeyRequired": true,
    "protectedOperations": ["DELETE", "PUT"],
    "allowOpenAccess": true,
    "description": "End-users: open access for scheduling. Admins: API key required for delete operations."
  },
  "fileUpload": {
    "maxSizeBytes": 52428800,
    "maxSizeMB": 50,
    "allowedFormats": ["xml", "json", "m3u"],
    "description": "Maximum 50MB per upload"
  },
  "validation": {
    "preventXmlEntityAttacks": true,
    "maxEventsPerFile": 10000,
    "parsingTimeoutSeconds": 30,
    "description": "XML/JSON validation with security checks"
  },
  "endpoints": {
    "open": [
      "GET /api/system-info",
      "GET /api/schedules",
      "GET /api/playlists",
      "POST /api/import-schedule",
      "POST /api/schedule-playlist",
      "POST /api/export-schedule-xml",
      "POST /api/export-schedule-json",
      "GET /api/queue-stats"
    ],
    "adminOnly": [
      "DELETE /api/schedule/:id",
      "DELETE /api/all-schedules"
    ]
  },
  "setup": {
    "requiredEnvVars": [
      "ADMIN_API_KEY",
      "PORT",
      "MAX_UPLOAD_SIZE"
    ],
    "defaultValues": {
      "PORT": 5000,
      "MAX_UPLOAD_SIZE": 52428800
    },
    "instructions": "Set ADMIN_API_KEY in environment variables or .env file"
  }
}
